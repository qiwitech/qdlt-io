{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^2.3.1",
    "mailgun-js": "^0.22.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "secure-compare": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-promise": "^4.1.1"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint --max-warnings=0 .",
